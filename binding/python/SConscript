Import('env')
list = Split("""
              diffractometer_eulerian4C_wrap.cpp
              hkl_wrap.cpp
              """)

myenv = env.Copy()

myenv.Append(CPPPATH = ['.', '#include', '#include/linux', '/usr/include/python2.3'])
myenv.Append(LIBPATH = ['#src'])
myenv.Append(LIBS = ['hkl', 'boost_python'])


myenv.SharedLibrary('hkl', list)
