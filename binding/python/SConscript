import distutils.sysconfig

sources = Split("""
                diffractometer_wrap.cpp
                diffractometer_kappa_wrap.cpp
                diffractometer_eulerian4C_wrap.cpp
                diffractometer_kappa4C_wrap.cpp
                hkl_wrap.cpp
                """)

includes = ['#include/hkl', distutils.sysconfig.get_python_inc()]
libs = ['hkl', 'boost_python']
libpath = ['../../src', distutils.sysconfig.get_python_lib()]

Import('env')
lenv = env.Copy()
lenv.AppendUnique(CPPPATH = includes)
lenv.AppendUnique(LIBS = libs)
lenv.AppendUnique(LIBPATH = libpath)

lenv.Library('hkl', sources)
