obj = bld.new_task_gen('cc', 'program')
obj.find_sources_in_dirs('.')
obj.source.remove('./bench.c')
obj.target = 'test'
obj.cflags = '-g'
obj.includes = '. ../src'
obj.rpath = bld.bdir + '/default/src'
obj.unit_test = 1
obj.uselib = 'GSL GOBJECT'
obj.uselib_local = 'hkl'
obj.install_path = None

