# vi:filetype=python:expandtab:tabstop=2:shiftwidth=2
Import('env')

lenv = env.Clone()

sources = Split("""
                hkl-vector.c
                hkl-matrix.c
                hkl-quaternion.c
                hkl-interval.c
                hkl-source.c
                hkl-axis.c
                hkl-list.c
                hkl-holder.c
                hkl-geometry.c
                hkl-detector.c
                hkl-parameter.c
                hkl-lattice.c
                hkl-sample.c
                hkl-pseudoaxis.c
                hkl-pseudoaxis-auto.c
                usage.c
                """)

includes = ['#include']

lenv.AppendUnique(CPPPATH = includes)

#libhkl = lenv.SharedLibrary(target = 'hkl', source = sources)
libhkl = lenv.Library(target = 'hkl', source = sources)
Default(libhkl)
